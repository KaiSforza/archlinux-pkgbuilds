# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=alsi-git
pkgver=6.0.4.4
pkgrel=1
pkgdesc="ALSI: a highly configurable system information tool. [Inspired by Archey]"
arch=('any')
url="https://github.com/trizen/alsi"
license=('GPL')
depends=('perl>=5.10.1' 'perl-data-dump')
optdepends=('scrot: for taking screenshots.')
conflicts=('alsi')
provides=('alsi')
source="git://github.com/trizen/alsi.git"
_gitname="alsi"
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  echo "$(git shortlog | grep -c '^\s\+').$(git describe --always)"
}

package() {
  cd "$srcdir/$_gitname"
  install -Dm 755 "$srcdir/$_gitname/alsi" "$pkgdir/usr/bin/$_gitname"
}
