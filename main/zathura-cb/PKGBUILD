pkgname=zathura-cb
pkgver=0.1.0
pkgrel=1
pkgdesc="Adds comic book support to zathura"
arch=('i686' 'x86_64')
url="http://pwmt.org/projects/zathura/plugins/zathura-cb"
source=(http://pwmt.org/projects/zathura/plugins/download/zathura-cb-0.1.0.tar.gz)
license=('custom')
depends=('zathura')
conflicts=('zathura-cb-git')
optdepends=('unrar: cbr support'
            'unzip: cbz support'
            'p7zip: cb7 support'
            'tar: cbt support')
sha1sums=('22ad7407843a543dd48ebfb06a6ffcd782c30ad6')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package () {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
	install -Dm664 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
