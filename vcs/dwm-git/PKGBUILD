pkgname=dwm-git
_pkgname=dwm
pkgver=6.0.55.g566312b
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
depends=('libx11' 'libxinerama' 'proggyfonts')
makedepends=('git')
install=dwm.install
provides=('dwm')
conflicts=('dwm')
source=(git+file:///home/wgiokas/git/KaiSforza/dwm#branch=patched)
        #git+http://git.suckless.org/dwm)
md5sums=('SKIP')
         

prepare() {
  cd "$srcdir/$_pkgname"
  #cp $srcdir/config.h config.h
  sed -i "s/VERSION = .*/VERSION = ${pkgver}-${pkgrel}/g" config.mk
  sed -i "s/VERSION .*/VERSION \"${pkgver}-${pkgrel}\"/g" config.def.h
}

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --tags --long | tr - .
}

build() {
  cd "$srcdir/$_pkgname"
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make CC=clang PREFIX=/usr DESTDIR=$pkgdir install
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
  install -m644 -D README $pkgdir/usr/share/doc/$pkgname/README
}

# vim:set ts=2 sw=2 et:
