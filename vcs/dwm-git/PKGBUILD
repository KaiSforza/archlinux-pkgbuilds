pkgname=dwm-git
_pkgname=dwm
pkgver=6.0.38.g5e3af89
pkgrel=4
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
depends=('libx11' 'libxinerama' 'proggyfonts')
makedepends=('git')
install=dwm.install
provides=('dwm')
conflicts=('dwm')
source=( config.h
	dwm.desktop
  git+file:///home/wgiokas/git/KaiSforza/dwm#branch=patched)
  #git+http://git.suckless.org/dwm)
md5sums=('SKIP'
         '939f403a71b6e85261d09fc3412269ee'
         'SKIP')

prepare() {
  cd "$srcdir/$_pkgname"
  cp $srcdir/config.h config.h
  sed -i "s/VERSION = .*/VERSION = ${pkgver}-${pkgrel}/g" config.mk
  sed -i 's/CPPFLAGS =/CPPFLAGS +=/g' config.mk
  sed -i 's/^CFLAGS *= -g/#CFLAGS += -g/g' config.mk
  sed -i 's/^#CFLAGS = -std/CFLAGS += -std/g' config.mk
  sed -i 's/^LDFLAGS = -g/#LDFLAGS += -g/g' config.mk
  sed -i 's/^#LDFLAGS = -s/LDFLAGS += -s/g' config.mk
  sed -i 's/^CC =/#CC =/' config.mk
  sed -i 's/^CFLAGS/#CFLAGS/g' config.mk
  sed -i 's/^CPPFLAGS/#CPPFLAGS/g' config.mk
}

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --tags --long | tr - .
}

build() {
  cd "$srcdir/$_pkgname"

  make CC=clang X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd "$srcdir/$_pkgname"
  make CC=clang PREFIX=/usr DESTDIR=$pkgdir install
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
  install -m644 -D README $pkgdir/usr/share/doc/$pkgname/README
  install -m644 -D $srcdir/dwm.desktop $pkgdir/usr/share/xsessions/dwm.desktop
}

# vim:set ts=2 sw=2 et:
