# Maintainer: Dave Reisner <d@falconindy.com>

pkgname=ponymix-git
epoch=1
pkgver=9c64dce
pkgrel=1
pkgdesc="CLI PulseAudio Volume Control"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/ponymix"
license=('MIT')
depends=('pulseaudio')
makedepends=('git')
conflicts=('ponymix' 'pulsemix-git')
provides=('ponymix' 'pulsemix-git')
replaces=('pulsemix-git')

source=("git://github.com/falconindy/ponymix.git")
md5sums=('SKIP')
_gitname="ponymix"

pkgver() {
  cd $srcdir/$_gitname
  echo $(git describe --always)
}

build() {
  cd "$srcdir/$_gitname"

  make
}

package() {
  make -C "$_gitname" DESTDIR="$pkgdir" install
}

# vim: ft=sh syn=sh et
