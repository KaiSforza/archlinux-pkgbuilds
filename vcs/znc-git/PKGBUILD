pkgname=znc-git
_pkgname=znc
pkgver=1.0.57.gf32db92
pkgrel=1
pkgdesc='An IRC bouncer with modules & scripts support'
url='http://znc.in/'
license=('GPL2')
arch=('i686' 'x86_64')
provides=('znc')
conflicts=('znc')
depends=('openssl')
makedepends=('swig' 'tcl' 'python' 'perl' 'cyrus-sasl')
optdepends=('tcl: modtcl module'
            'python: modpython module'
            'perl: modperl module'
            'cyrus-sasl: saslauth module')
source=("git://github.com/znc/znc.git")
md5sums=('SKIP')

pkgver() {
  cd $srcdir/$_pkgname
  git describe | sed 's/-/./g;s/znc.//'
}
build() {
  cd "$srcdir/$_pkgname"
  ./autogen.sh
  ./configure --prefix=/usr \
    --enable-cyrus
    #--enable-tcl \
    #--enable-perl \
    #--enable-python
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
