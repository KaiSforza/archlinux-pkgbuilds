# Contributor: Dave Reisner <d@falconindy.com>

pkgname=expac-git
pkgver=1.4.g4ff7b89
pkgrel=1
pkgdesc="pacman database extraction utility"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/expac"
license=('MIT')
depends=('pacman')
makedepends=('git' 'perl')
conflicts=('expac')
provides=('expac')

source=("git://github.com/falconindy/expac.git#branch=pacman41")
md5sums=('SKIP')
_gitname="expac"

pkgver() {
    cd "$srcdir/$_gitname"
    echo $(git describe | sed 's/-/./g')
}
build() {
  cd "$srcdir/$_gitname"

  make
}

package() {
  cd "$srcdir/$_gitname"
  make PREFIX=/usr DESTDIR="$pkgdir" install
}

# vim: ft=sh syn=sh et
